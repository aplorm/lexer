{
    "name": "aplorm/lexer",
    "description": "Lexer for aplorm",
    "type": "library",
    "require": {
        "php": "7.4.3",
        "aplorm/common": "dev-master"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpstan/phpstan-symfony": "^0.12.4",
        "phpunit/phpunit": "^9.0",
        "behat/behat": "^3.6",
        "phpunit/php-code-coverage": "^8.0",
        "ext-json": "*"
    },
    "license": "mit",
    "authors": [
        {
            "name": "Nicolas Moral",
            "email": "nicolas.m@live.fr"
        }
    ],
    "autoload": {
        "psr-4": {
            "Aplorm\\Lexer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aplorm\\Lexer\\Tests\\": "Tests/",
            "Aplorm\\Lexer\\Behat\\": "features/"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/aplorm/common"
        }
    ]
}
